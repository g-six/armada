{
    "name": "armada",
    "version": "2.0.0",
    "bin": {
        "armada": "bin/index.js"
    },
    "scripts": {
        "prebuild": "rimraf lambdas/$PACKAGE",
        "build": "tsc src/$PACKAGE/**.ts --outDir lambdas/$PACKAGE",
        "postbuild": "cp src/$PACKAGE/package.json lambdas/$PACKAGE && cd lambdas/$PACKAGE && npm i --only=production",
        "format": "prettier --write \"{bin,src,lib,test}/**/*.ts\"",
        "lint": "eslint --fix ./src ./test ./lib ./bin --ext .ts",
        "watch": "tsc -w",
        "test": "jest",
        "cdk": "cdk"
    },
    "devDependencies": {
        "@aws-cdk/assert": "1.89.0",
        "@aws-cdk/aws-apigatewayv2": "^1.89.0",
        "@aws-cdk/aws-apigatewayv2-integrations": "^1.89.0",
        "@aws-cdk/aws-codepipeline": "^1.89.0",
        "@aws-cdk/aws-codepipeline-actions": "^1.89.0",
        "@aws-cdk/aws-dynamodb": "^1.89.0",
        "@aws-cdk/aws-lambda": "^1.89.0",
        "@aws-cdk/core": "1.89.0",
        "@aws-cdk/pipelines": "^1.89.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/aws-lambda": "^8.10.72",
        "@types/aws-sdk": "^2.7.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/jest": "^26.0.10",
        "@types/node": "^10.17.27",
        "@types/shortid": "0.0.29",
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "aws-cdk": "1.89.0",
        "aws-lambda": "^1.0.6",
        "aws-sdk": "^2.845.0",
        "bcryptjs": "^2.4.3",
        "cdk-typescript-tooling": "^2.0.0",
        "commitizen": "^4.2.3",
        "conventional-changelog-eslint": "^3.0.9",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^26.4.2",
        "prettier": "^2.2.1",
        "source-map-support": "^0.5.16",
        "ts-jest": "^26.2.0",
        "ts-node": "^9.0.0",
        "typescript": "~3.9.7"
    },
    "dependencies": {
        "shortid": "^2.2.16"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
